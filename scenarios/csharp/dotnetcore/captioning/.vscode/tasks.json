{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configuration and Setup",
            "type": "shell",
            "command": "${workspaceFolder}/app_manager.ps1",
            "args": [
                "configure"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "windows": {
                "command": "powershell",
                "args": [
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File",
                    "${workspaceFolder}/app_manager.ps1",
                    "configure"
                ]
            }
        },
        {
            "label": "Build the App",
            "type": "shell",
            "command": "${workspaceFolder}/app_manager.ps1",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$msCompile",
            "windows": {
                "command": "powershell",
                "args": [
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File",
                    "${workspaceFolder}/app_manager.ps1",
                    "build"
                ]
            }
        },
        {
            "label": "Run the App",
            "type": "shell",
            "command": "${workspaceFolder}/app_manager.ps1",
            "args": [
                "run"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": [],
            "windows": {
                "command": "powershell",
                "args": [
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File",
                    "${workspaceFolder}/app_manager.ps1",
                    "run"
                ]
            }
        }
    ]
}